<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context="com.example.steffan.prox.HeaderActivity">


    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_action_feed"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/homeButton"
        android:background="@drawable/ic_action_profile"
        android:paddingBottom="20dp"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="70dp"
        android:layout_marginLeft="30dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/settingButton"
        android:background="@drawable/ic_action_search"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_action_setting"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="0dp" />
    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="480dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Soccer Game by Username"
                android:textColor="#000"
                android:textSize="20sp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="location"
                    android:layout_gravity="right"
                    android:textSize="10sp">

                </TextView>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dd/mm/yy"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:textSize="10sp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="Football Game by Username"
                android:textColor="#000"
                android:textSize="20sp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="location"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="right"
                    android:textSize="10sp">

                </TextView>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dd/mm/yy"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:textSize="10sp">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="Soccer Game by Username"
                android:textColor="#000"
                android:textSize="20sp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="location"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="right"
                    android:textSize="10sp">

                </TextView>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dd/mm/yy"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:textSize="10sp">

                    </TextView>



                </LinearLayout>


            </LinearLayout>








        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

